.ch-root-selector
  .input
    // display none
    &:checked
      background-color #A00
      color #FFF
  .button-wrapper
    display flex
    flex-direction row
    align-items center
  .button-slot
    display flex
    flex-direction column
  .button
    border none
    display inline-flex
    justify-content center
    width 1.5rem
    height 1.5rem
    margin 0.5rem
    padding 0.5rem
    border-radius 50%
    background-color #F0F0F0
    cursor pointer
    font-weight bold
    transition all 0.25s ease
    &:hover
    &.selected
      background-color #A00
      color #FFF